{
  "name": "light-tracking-electron",
  "version": "1.0.0",
  "description": "Time tracking desktop application",
  "type": "module",
  "main": "electron/main.mjs",
  "author": "Anna <lightallloy@gmail.com>",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "start": "npm run electron:dev",
    "generate-icons": "node scripts/generate-icons.js",
    "postinstall": "npm run generate-icons && npx @electron/rebuild",
    "dist": "vite build && electron-builder --publish never"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.lighttracking.app",
    "productName": "Light Tracking",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "dist/**/*",
      "assets/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    }
  }
}
